<h1>Burgers!</h1>

<img src="../public/img/burgerimg.jpg">

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">Devour!
        </button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" burger_name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
